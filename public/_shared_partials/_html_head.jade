//- Define the language, based on the page URL
//- TODO update this as needed
html(
	lang="#{ current.path[3] }"
)
	head
		//- Set the page title to the most proximate title variable
		title #{ title }

		//- Include JQuery
		script(
			src="/_components/jquery/dist/jquery.min.js"
		)

		//- Include Bootstrap

		//- Set the base viewport size
		meta(
			name="viewport",
			content="width=device-width, initial-scale=1"
		)

		//- Include Bootstrap 
		//- Include compiled and minified Bootstrap JS
		//- Bootstrap CSS is automatically embedded into our CSS
		script(
			src="/_components/bootstrap/dist/js/bootstrap.min.js"
		)

		//- Include Highlight.js JS for code highlighting
		script(
			src="/_components/highlightjs/highlight.pack.min.js"
		)

		//- Include some fonts we need

		//- Lato
		link(
			rel="stylesheet",
			href="/_components/lato/css/lato.min.css",
			type="text/css"
		)

		//- League Gothic
		link(
		rel="stylesheet",
		href="/_components/league-gothic/webfonts/stylesheet.css",
		type="text/css"
		)


		//- Include our specific styles
		link(
			rel="stylesheet",
			href="/css/style.css",
			media="all"
		)

		//- Include subject specific styles
		link(
			rel="stylesheet",
			href="/css/subject_style/#{ language }.css",
			media="all"
		)

		//- Include Highlight.js CSS for code styling, and to overwrite our CSS
		link(
			rel="stylesheet"
			href="/_components/highlightjs/styles/xcode.css",
			media="all"
		)
